/* pages/category/index.wxss */

.category {
  position: absolute;
  top: 100rpx;
  bottom: 0;
  width: 100%;
}

.search {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  background: #ff2d4a;
  z-index: 9;
}

.search-input {
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 4px;
  font-size: 14px;
  color: #666;
}

.search-input icon {
  margin-right: 10px;
}

.main {
  height: 100%;
  display: flex;
  justify-content: space-between;
  position: relative;
}

.main .main-left {
  position: absolute;
  top: 0;
  left: 0;
  width: 200rpx;
  height: 100%;
  overflow: scroll;
  background: #f5f5f5;
}

.main .main-left .main-left-item {
  height: 100rpx;
  border-bottom: 1px solid #eee;
  line-height: 100rpx;
  text-align: center;
  box-sizing: border-box;
}

.main .main-left .active {
  background: #fff;
  color: #ff2d4a;
  position: relative;
}

.main .main-left .active::before {
  display: block;
  content: "";
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 4px;
  height: 60rpx;
  background: #ff2d4a;
}

.main .main-rights {
  position: absolute;
  left: 200rpx;
  right: 0;
  height: 100%;
  flex: 1;
  overflow: scroll;
}

.main .main-right .main-right-title {
  text-align: center;
}

.main .main-right .main-right-cates {
  display: flex;
  flex-wrap: wrap;
}

.main .main-right .main-right-cates .main-right-cates-item {
  width: 33.33%;
  font-size: 14px;
  color: #666;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.main .main-right .main-right-cates .main-right-cates-item image {
  width: 120rpx;
  height: 120rpx;
}

.main .main-right .main-right-cates .main-right-cates-item>view {
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
