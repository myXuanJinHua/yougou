/* pages/goods_details/index.wxss */
.slide{
  height: 750rpx;
}
.slide-image{
  width: 750rpx;
  height: 750rpx;
}
.goods_price{
  padding: 20rpx;
  font-size: 20px;
  color: #ff2d4a;
}
.goodsInfo{
  display: flex;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}
.goodsInfo .goodsName{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodsInfo .goodstar{
  border-left: 1px solid #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 250rpx;
  font-size: 12px;
  color: #ccc;
}
.navBottom{
  width: 100%;
  height: 80rpx;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
}
.navBottom .navSmall{
  position: relative;
  width: 20%;
  text-align: center;
  font-size: 12px;
  color: #666;
  background: #fff;
}
.navBottom .navSmall button{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}
.navBottom .navBig{
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: orange;
  color: #fff;
  font-size: 14px;
}
.navBottom .buy{
  background: #ff2d4a;
}