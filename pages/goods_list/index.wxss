.search {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  background: #eee;
  z-index: 9;
}

.search-input {
  height: 80rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 4px;
  font-size: 14px;
  color: #666;
}

.search-input icon {
  margin: 0 10px;
}

.goods-title {
  margin-top: 120rpx;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  font-size: 14px;
  color: #333;
  border-bottom: 1px solid #eee;
}

.goods-title .active {
  color: #ff2d4a;
}

.goods-list .goods-list-item {
  padding: 20rpx;
  display: flex;
  border-bottom: 1px solid #eee;
}

.goods-list-item image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.goods-list-item .goods-right {
  padding-left: 20rpx;
  flex: 1;
}

.goods-right .goods-name {
  color: #333;
  font-size: 14px;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 60rpx;
}

.goods-right .goods-price {
  color: #ff2d4a;
  font-size: 18px;
}

.goods-price>text {
  font-size: 12px;
}
.more{
  font-size: 12px;
  padding:20rpx;
  line-height: 1.5;
  text-align: center;
  background: #ccc;
}